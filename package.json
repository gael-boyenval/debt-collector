{
  "name": "debt-collector",
  "version": "v1.0.0-alpha.5",
  "description": "a nodejs tool to identify, track and mesure technical debt",
  "bin": "./dist/cli.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc",
		"dev": "tsc --watch",
    "newDev": "pnpm newBuild --watch --ignore-watch dist --ignore-watch build",
    "newBuild": "tsup ./index.tsx --dts --sourcemap --format esm,cjs --minify",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./commands ./components ./lib"
  },
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gael-boyenval/debt-collector.git"
  },
  "keywords": [
    "technical",
    "debt"
  ],
  "author": "gael-boyenval",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gael-boyenval/debt-collector/issues"
  },
  "homepage": "https://github.com/gael-boyenval/debt-collector#readme",
  "dependencies": {
    "escape-string-regexp-node": "^1.0.2",
    "glob": "^7.2.3",
    "ink": "^3.2.0",
    "ink-big-text": "^1.2.0",
    "ink-table": "^3.1.0",
    "ink-task-list": "^1.1.1",
    "inquirer": "^8.2.6",
    "minimatch": "^3.1.2",
    "p-map": "^5.5.0",
    "pastel": "^2.0.2",
    "prop-types": "^15.8.1",
    "queue-promise": "^2.2.1",
    "react": "^18.2.0",
    "simple-git": "^3.22.0",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.54.2"
  },
  "ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
  "peerDependencies": {
    "eslint": ">= 7.0.0 < 8.0.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    }
  }
}
